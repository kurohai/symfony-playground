{% extends 'base.html.twig' %}

{% block body %}
    <h1>Product list</h1>

    <a class="btn btn-primary solitary-button" href="{{ path('product_new') }}">Create a new entry</a>
    <div class="table-responsive div-table-test">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
            <tr>
                <td><a class="btn btn-primary" href="{{ path('product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.description }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('product_show', { 'id': product.id }) }}">show</a>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <a class="btn btn-primary" href="{{ path('product_edit', { 'id': product.id }) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
    var navActive = {
        init: function() {
            $("#nav-home").removeClass("active");
            $("#nav-part-list").addClass("active");
            $("#nav-category-list").removeClass("active");
        },
    };
    window.onload = navActive.init();

    </script>
{% endblock %}
